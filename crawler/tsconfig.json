{
  "compilerOptions": {
     "lib": [
        "ES2021"
     ],
     "target": "ES2021",
     "module": "commonjs",
     "moduleResolution": "node",
     "outDir": "./build",
     "emitDecoratorMetadata": true,
     "experimentalDecorators": true,
     "esModuleInterop": true,
     "sourceMap": false,
     "skipLibCheck": true,
     "resolveJsonModule": true,
     "rootDir": "./src",
     "baseUrl": "src",
     "paths": {
        "@/*": ["*"]
     }
  },
  "include": ["src"],
}